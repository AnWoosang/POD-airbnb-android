<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/foirounded"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/frag_onboard_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:contentDescription="TEST"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/frag_onboard_title"
            android:layout_below="@+id/foirounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="tkdfnm"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/frag_onboard_content"
            android:layout_below="@+id/frag_onboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="heufawh"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</LinearLayout>