<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/frag_onboard_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_userimg"
                android:contentDescription="TEST"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chatroom_title"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="tkdfnm"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/chatroom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="efejifeji"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_above="@+id/chatroom_content"
            android:layout_toEndOf="@+id/chatroom_title"/>
        <TextView
            android:id="@+id/chatroom_content"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_below="@+id/chatroom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

</LinearLayout>