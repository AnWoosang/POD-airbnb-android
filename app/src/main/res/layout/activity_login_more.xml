<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMoreActivity"
    android:orientation="vertical"
    android:background="@color/darkCyan">

    <ImageButton
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_out"
        android:backgroundTint="@color/white"
        android:layout_gravity="left|center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_google"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_button"
            android:text="@string/google"
            android:textSize="15sp"
            android:textColor="@color/darkCyan"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="17dp"
            android:drawableLeft="@drawable/ic_google"
            android:drawableTint="@color/darkCyan"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/login_facebook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_button"
            android:text="@string/facebook"
            android:textSize="15sp"
            android:textColor="@color/darkCyan"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="17dp"
            android:drawableLeft="@drawable/ic_facebook_login"
            android:drawableTint="@color/darkCyan"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/create_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_outline_button"
            android:text="@string/signin_account"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>